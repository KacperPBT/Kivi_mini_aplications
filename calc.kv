<Button>
    font_size: 32

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: 'right'
            font_size: 65
            multiline: False
            size_hint: (1, .15)
        
        GridLayout:
            cols: 4

            # Row 1
            Button:
                text: '%'

            Button:
                id: clear
                text: 'C'
                on_press: root.clear()

            Button:
                text: u'\u00AB'
                on_press: root.remove()

            Button:
                text: '/'
                on_press: root.math_operator("/")

            # Row 2
            Button:
                text: '7'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(7)
            
            Button:
                text: '8'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(8)

            Button:
                text: '9'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(9)

            Button:
                text: 'x'
                on_press: root.math_operator("*")

            # Row 3
            Button:
                text: '4'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(4)

            Button:
                text: '5'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(5)

            Button:
                text: '6'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(6)

            Button:
                text: '-'
                on_press: root.math_operator("-")

            # Row 4
            Button:
                text: '1'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(1)

            Button:
                text: '2'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(2)

            Button:
                text: '3'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(3)

            Button:
                text: '+'
                on_press: root.math_operator("+")

            # Row 5
            Button:
                text: '00'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press("00")

            Button:
                text: '0'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(0)

            Button:
                text: '.'
                background_color: (157/255,157/255,157/255,1)
                on_press: root.dot()

            Button:
                text: '='
                on_press: root.equal()